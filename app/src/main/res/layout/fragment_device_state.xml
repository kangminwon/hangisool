<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".DeviceStateFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/main_fragment_back2"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            android:weightSum="2"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@drawable/stroke_right_bottom"
                android:layout_height="match_parent"
                android:id="@+id/btn_air_condition"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:id="@+id/txt_air_condition"
                    android:text="GOOD" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#fff"
                    android:text="Air Condition"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/txt_air_condition"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            android:weightSum="2"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_right_bottom"
                android:layout_height="match_parent"
                android:id="@+id/btn_temperature"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/txt_temperature"
                    android:textColor="#fff"
                    android:text="25.7" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Temperature(%C)"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/txt_temperature"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_right_bottom"
                android:layout_height="match_parent"
                android:id="@+id/btn_humidity"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"
                    android:id="@+id/txt_humidity"
                    android:text="48" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Humidity(%)"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:layout_above="@+id/txt_humidity"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            android:weightSum="2"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_right_bottom"
                android:layout_height="match_parent"
                android:id="@+id/btn_small_dust"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="40dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/txt_small_dust"
                    android:text="54" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    android:text="Fine dust(PM2.5)"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/txt_small_dust"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_filter_life"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="@drawable/stroke_right_bottom"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="40dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/txt_filterlife"
                    android:text="154" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    android:text="Filter life(days)"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/txt_filterlife"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0"
                android:background="@drawable/stroke_right_bottom"
                android:id="@+id/btn_reservation"
                android:clickable="true"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/txt_reservation"
                    android:text="EDIT" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="10dp"
                    android:text="Reservation"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/txt_reservation"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="31"
            android:weightSum="100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4"
                android:layout_weight="50"
                android:background="@drawable/stroke_right_bottom"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_network"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:text="NETWORK : OK"/>
                <TextView
                    android:background="@drawable/stroke_right_bottom"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Speed"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/btn_speed1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/btn_speed2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/btn_speed3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"
                    android:clickable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:weightSum="3"
                android:background="#fff"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Power"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/btn_power"/>
                    <Button
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/btn_power"
                        android:background="@drawable/ic_power_settings_new_black_24dp_on"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="manual"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/btn_manual"/>
                    <Button
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/btn_manual"
                        android:background="@drawable/baseline_favorite_border_black_48dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Auto"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/btn_auto"/>
                    <Button
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/btn_auto"
                        android:background="@drawable/ic_autorenew_black_24dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Sleep"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/btn_sleep"/>
                    <Button
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/btn_sleep"
                        android:background="@drawable/ic_brightness_2_black_24dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>